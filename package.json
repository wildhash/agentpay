{
  "name": "agentpay",
  "version": "2.0.0",
  "description": "AI-native payments with MNEE: escrow + verification + instant partial/full refunds for autonomous agents",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:coverage": "hardhat coverage",
    "node": "hardhat node",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:mainnet": "hardhat run scripts/deploy.js --network mainnet",
    "demo": "hardhat run scripts/demo-scenario.js --network localhost",
    "verifier": "node verifier/server.js",
    "web": "npx http-server web -p 8080 -c-1",
    "lint": "eslint . --ext .js,.ts",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "format": "prettier --write '**/*.{js,ts,json,md,sol}'",
    "clean": "hardhat clean && rm -rf deployments/*.json"
  },
  "keywords": [
    "ethereum",
    "solidity",
    "escrow",
    "ai",
    "agents",
    "mnee",
    "stablecoin",
    "payments",
    "defi"
  ],
  "author": "AgentPay Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wildhash/agentpay.git"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "chai": "^4.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.0",
    "prettier": "^3.2.0",
    "prettier-plugin-solidity": "^1.3.0",
    "solhint": "^4.1.0",
    "solidity-coverage": "^0.8.0",
    "typechain": "^8.3.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "ethers": "^6.9.0",
    "express": "^4.18.0",
    "express-rate-limit": "^7.1.0",
    "http-server": "^14.1.0"
  }
}
